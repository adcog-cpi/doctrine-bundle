<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="eb_doctrine.listener.timestampablelistener.class">EB\DoctrineBundle\Listener\TimestampableListener</parameter>
        <parameter key="eb_doctrine.listener.sluggablelistener.class">EB\DoctrineBundle\Listener\SluggableListener</parameter>
    </parameters>
    <services>
        <service id="eb_doctrine.listener.timestampablelistener" class="%eb_doctrine.listener.timestampablelistener.class%">
            <tag name="doctrine.event_listener" event="prePersist"/>
            <tag name="doctrine.event_listener" event="preUpdate"/>
        </service>
        <service id="eb_doctrine.listener.sluggablelistener" class="%eb_doctrine.listener.sluggablelistener.class%">
            <argument id="eb_string" type="service"/>
            <tag name="doctrine.event_listener" event="prePersist"/>
            <tag name="doctrine.event_listener" event="preUpdate"/>
        </service>
    </services>
</container>